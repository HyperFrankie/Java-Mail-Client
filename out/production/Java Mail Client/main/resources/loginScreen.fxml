<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="loginScreen" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginScreenController">
   <children>
      <HBox layoutX="10.0" layoutY="10.0" spacing="5.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <VBox alignment="TOP_RIGHT" spacing="13.0">
               <children>
                  <Label text="Email" />
                  <Label text="Password" />
               </children>
               <padding>
                  <Insets top="4.0" />
               </padding>
            </VBox>
            <VBox fx:id="loginInformation" prefWidth="200.0" spacing="5.0">
               <children>
                  <TextField fx:id="loginMail" promptText="example@example.com" />
                  <PasswordField fx:id="loginPass" promptText="Password" />
                  <HBox alignment="TOP_RIGHT" spacing="5.0">
                     <children>
                        <Button cancelButton="true" mnemonicParsing="false" text="Cancel" />
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#login" text="Login" />
                     </children></HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
